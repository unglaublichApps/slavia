<%= render 'shared/page_title', title: "All acoounts" %>

<% @accounts.each do |account| %>

  <div class="col-xs-6 col-sm-6 col-md-3 col-lg-3">

    <!-- PRICE ITEM -->
    <div class="panel price panel-red">
    	<div class="panel-heading  text-center">
    	<h3><%= account.name.capitalize %></h3>
    	</div>
    	<div class="panel-body text-center">
    		<p class="lead" style="font-size:40px"><strong><%= account.balance %></strong></p>
    	</div>
    	<ul class="list-group list-group-flush text-center">
    		<li class="list-group-item"><i class="icon-ok text-danger"></i> 27/7 support</li>
    	</ul>
    	<div class="btn btn-lg btn-block btn-success">
    		<%= link_to account.name.capitalize, account_path(account) %>
    	</div>
    </div>
    <!-- /PRICE ITEM -->
  </div>
<% end %>
